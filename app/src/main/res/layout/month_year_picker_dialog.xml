<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        <TextView
                android:id="@+id/selected_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="24sp"
                android:textColor="@color/bottom_nav_color"
                android:layout_weight="1"
                android:gravity="right"
                android:layout_margin="8dp"
                android:text="JAN" android:textStyle="bold"/>
        <TextView
                android:layout_weight="1"
                android:id="@+id/selected_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:textSize="24sp"
                android:textColor="@color/bottom_nav_color"
                android:text=" 2021" android:textStyle="bold"/>

    </LinearLayout>


    <GridLayout
        android:id="@+id/month_grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="4"
        android:rowCount="3"
        android:orientation="horizontal">

        <!-- Repeat these buttons for each month -->
        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="JAN" />

        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="FEB" />

        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="MAR" />

        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="APR" />

        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="MAY" />

        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="JUN" />

        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="JUL" />

        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="AUG" />

        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="SEP" />

        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="OCT" />

        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="NOV" />

        <Button
            android:layout_width="wrap_content"
            style="@style/MonthButton"
            android:layout_height="wrap_content"
            android:text="DEC" />

    </GridLayout>

    <NumberPicker
        android:id="@+id/picker_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal" />
</LinearLayout>
