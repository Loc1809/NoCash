<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:padding="20dp" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <TextView
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/budget_name"
            android:text="Budget name" />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="vertical">
        <TextView
                android:textStyle="bold"
                android:id="@+id/budget_using"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget using" />
        <TextView
                android:textStyle="bold"
                android:id="@+id/budget_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Budget left" />

    </LinearLayout>


</LinearLayout>