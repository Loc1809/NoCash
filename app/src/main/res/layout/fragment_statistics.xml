<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ui.budget.BudgetFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/statitics_recycler_view"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.872">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/baseline_keyboard_arrow_left_24"
                    android:id="@+id/budget_go_back"/>
            <TextView
                    android:id="@+id/budget_month_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@string/font_family"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:capitalize="sentences"
                    tools:ignore="Deprecated"
                    android:gravity="right"/>
            <TextView
                    android:id="@+id/budget_year_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@string/font_family"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:capitalize="sentences"
                    tools:ignore="Deprecated"
                    android:gravity="left"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/baseline_keyboard_arrow_right_24"
                    android:layout_weight="1"
                    android:id="@+id/budget_go_previous"/>
        </LinearLayout>
        <androidx.cardview.widget.CardView
                android:layout_width="381dp"
                android:layout_height="63dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="28dp"
                app:layout_constraintHorizontal_bias="0.461" android:id="@+id/cardView3">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="63dp">

                <TextView
                        android:text="Balance"
                        android:layout_width="194dp"
                        android:layout_height="23dp" android:id="@+id/textView10"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"
                        android:textAlignment="center"/>
                <TextView
                        android:textStyle="bold"
                        android:text="12.990.990.00 VND"
                        android:layout_width="243dp"
                        android:layout_height="25dp" android:id="@+id/balance_statitics"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintVertical_bias="0.605"
                        android:textAlignment="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/statitics_recycler_view"
                android:layout_width="381dp"
                android:layout_height="499dp"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_bias="0.533" app:layout_constraintVertical_bias="0.637"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>