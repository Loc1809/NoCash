<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/bottom_nav_color"
                                                   tools:context=".ui.add_record.AddWalletFragment">
 <androidx.constraintlayout.widget.ConstraintLayout
         android:id="@+id/parent_layout"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_marginTop="20dp"
         android:paddingLeft="10dp"
         android:paddingRight="10dp"
         app:layout_constraintTop_toTopOf="parent"
         android:background="@color/bottom_nav_color"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintEnd_toEndOf="parent">

     <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/home_header"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="20dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/bottom_nav_color"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="16dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardElevation="4dp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">
                    <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">
                          <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" android:layout_weight="2">
                                <ImageButton
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:id="@+id/in_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/button_selector"
                                    android:background="@drawable/button_selector"
                                    android:layout_weight="2"
                                />
                              <TextView
                                      app:layout_constraintStart_toStartOf="parent"
                                      app:layout_constraintTop_toTopOf="parent"
                                      app:layout_constraintBottom_toBottomOf="parent"
                                      app:layout_constraintEnd_toEndOf="parent"
                                      android:text="Income"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textAllCaps="true"
                                      android:layout_weight="2"
                                      android:textStyle="bold"/>
                          </androidx.constraintlayout.widget.ConstraintLayout>
                          <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="2">
                                <ImageButton
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:id="@+id/out_btn"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:src="@drawable/button_selector"
                                    android:background="@drawable/button_selector"/>
                              <TextView
                                      app:layout_constraintStart_toStartOf="parent"
                                      app:layout_constraintTop_toTopOf="parent"
                                      app:layout_constraintBottom_toBottomOf="parent"
                                      app:layout_constraintEnd_toEndOf="parent"
                                      android:text="Outcome"
                                      android:layout_width="wrap_content"
                                      android:layout_height="wrap_content"
                                      android:textStyle="bold"
                                      android:textAllCaps="true"/>
                          </androidx.constraintlayout.widget.ConstraintLayout>


                    </LinearLayout>
                </RadioGroup>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="5dp"
                                tools:layout_editor_absoluteY="1dp"
                                tools:layout_editor_absoluteX="1dp">
                            <ImageView
                                    android:src="@drawable/baseline_wallet_24"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"/>
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent">
                                <TextView
                                        android:text="Name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"/>
                                <EditText
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:inputType="text"
                                        android:hint="@string/dot"
                                        android:ems="13"
                                        android:id="@+id/edit_text_name"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:layout_margin="5dp"
                                tools:layout_editor_absoluteY="1dp"
                                tools:layout_editor_absoluteX="1dp">
                            <ImageView
                                    android:src="@drawable/baseline_style_24"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_margin="10dp"/>
                            <LinearLayout
                                    android:id="@+id/select_icon_cate"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">
                                <androidx.constraintlayout.widget.ConstraintLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">
                                    <TextView
                                            android:id="@+id/icon_title"
                                        android:text="Icon"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toStartOf="parent"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textSize="12sp"/>
                                    <EditText
                                            app:layout_constraintTop_toBottomOf="@+id/icon_title"
                                            app:layout_constraintStart_toStartOf="parent"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:hint="@string/category_icon"
                                            android:ems="13"
                                            android:clickable="false"
                                            android:focusable="false"
                                            android:id="@+id/placeholder_icon_select"/>
                                    <ImageView
                                            android:src="@drawable/baseline_keyboard_arrow_right_24_purple"
                                            android:id="@+id/arrow_select"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            app:layout_constraintTop_toBottomOf="@id/icon_title"
                                            app:layout_constraintEnd_toEndOf="parent"
                                            app:layout_constraintBottom_toBottomOf="parent"/>
                                    <ImageView
                                        android:id="@+id/icon_preview"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_marginStart="15dp"
                                        app:layout_constraintTop_toTopOf="parent"
                                        app:layout_constraintStart_toEndOf="@id/icon_title"
                                        android:visibility="gone"/>
                                </androidx.constraintlayout.widget.ConstraintLayout>

                            </LinearLayout>
                            <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent" android:orientation="vertical">
                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:visibility="gone"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
         <Button
                android:id="@+id/view_all_button"
                android:text="View All"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/purple_700"
                android:layout_margin="10dp"
                app:layout_constraintTop_toBottomOf="@id/cardView"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
     <LinearLayout
             android:orientation="horizontal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginBottom="50dp"
             app:layout_constraintBottom_toBottomOf="parent"
             app:layout_constraintStart_toStartOf="parent"
             app:layout_constraintEnd_toEndOf="parent">

         <Button
                 android:text="Delete"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:id="@+id/option_button"
                 android:layout_weight="2"
                 android:backgroundTint="@color/material_dynamic_neutral_variant70"
                 android:layout_margin="10dp"
                 android:visibility="gone"/>
         <Button
                android:text="Clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/clear_button"
                android:layout_weight="2"
                android:backgroundTint="@color/material_dynamic_neutral_variant50"
                android:layout_margin="10dp"
                />
         <Button
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/add_category_button"
                android:layout_margin="10dp"
                android:layout_weight="2"/>
     </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
