<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background"
              android:id="@+id/fragment_budget" android:orientation="vertical"
                android:layout_marginBottom="60dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white"
                                app:srcCompat="@drawable/baseline_keyboard_arrow_left_24_black"
                                android:layout_gravity="start"
                                android:id="@+id/go_back"/>
                        <TextView
                                android:id="@+id/month_text"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@string/font_family"
                                android:textColor="@color/black"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="test"
                                android:layout_weight="3"
                                android:capitalize="sentences"
                                tools:ignore="Deprecated"
                                android:gravity="center"/>
                        <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                app:srcCompat="@drawable/baseline_keyboard_arrow_right_24_black"
                                android:layout_weight="1"
                                android:background="@color/white"
                                android:id="@+id/go"/>
                    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="10dp"
                app:cardCornerRadius="16dp"
                android:layout_weight="1"
                app:cardElevation="4dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">
                <ImageButton
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        app:srcCompat="@drawable/baseline_arrow_downward_24"/>
                <TextView
                        android:layout_marginRight="10dp"
                        android:id="@+id/txt_outcome"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@string/font_family"
                        android:textColor="@color/red"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="0 đ"
                        android:layout_gravity="center"
                        android:gravity="right"
                />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                android:layout_weight="1"
                app:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="horizontal">
                                <ImageButton
                                        android:layout_marginLeft="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:background="@color/white"
                                        app:srcCompat="@drawable/baseline_arrow_downward_24"
                                        android:rotation="180"/>
                                <TextView
                                        android:id="@+id/txt_income"
                                        android:layout_width="match_parent"
                                        android:layout_marginRight="10dp"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@string/font_family"
                                        android:textColor="@color/mdtp_red"
                                        android:textSize="20sp"
                                        android:textStyle="bold"
                                        android:text="0 đ"
                                        android:layout_gravity="center"
                                        android:gravity="right"
                                />
                    </LinearLayout>
            </androidx.cardview.widget.CardView>
    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp">
    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/parentTransLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/budget_trans_list"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/fragment_spend_limit"
                    tools:ignore="MissingConstraints"
            />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</androidx.cardview.widget.CardView>


</LinearLayout>
